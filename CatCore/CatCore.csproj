<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <LangVersion>8</LangVersion>
        <Nullable>enable</Nullable>
		<TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
        <AssemblyVersion>3.0.0</AssemblyVersion>
        <FileVersion>3.0.0</FileVersion>
        <TargetFramework>netstandard2.0</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="DryIoc" Version="4.7.4" />
      <PackageReference Include="ILRepack" Version="2.0.18" />
      <PackageReference Include="ILRepack.MSBuild.Task" Version="2.0.13" />
      <PackageReference Include="Polly" Version="7.2.1" />
      <PackageReference Include="Serilog" Version="2.10.1-dev-01285" />
      <PackageReference Include="System.Net.Http.Json" Version="5.0.0" />
      <PackageReference Include="System.Text.Json" Version="5.0.1" />
      <PackageReference Include="Websocket.Client" Version="4.3.30" />
    </ItemGroup>
	
	<ItemGroup Condition=" '$(Configuration)' == 'Debug' ">
		<PackageReference Include="Serilog.Sinks.Console" Version="4.0.0-dev-00839" />
	</ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="Resources\index.html" />
    </ItemGroup>

    <Import Project="ILRepack.targets" />

</Project>
